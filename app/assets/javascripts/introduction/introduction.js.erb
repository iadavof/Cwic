APP.introduction = {
  index: function() {
    // Replace logo with svg version if svg is available
    if (Modernizr.svg) {
      $('#logo-container .logo').attr('src', '<%= asset_path('logo.svg') %>');
    }
    $('.background-slider').cycle({
      autoHeight: false,
      slides: '> div',
      speed: 800,
    });
    var $cyclePrevLink = $('<span class="cycle-prev icon-chevron-left">');
    var $cycleNextLink = $('<span class="cycle-next icon-chevron-right">');
    $('section .image-section').append($cyclePrevLink, $cycleNextLink).cycle({
      autoHeight: false,
      slides: '> div',
      speed: 800,
      fx: 'scrollHorz',
      pauseOnHover: true,
      swipe: true,
      swipeFx: 'scrollHorz',
    });
    $('.lazy').lazyload({
      effect: "fadeIn"
    });
    $('body').find('select, :radio, :checkbox, input[type=file]').cwicControl();
  },
}
